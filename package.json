{
  "name": "ppc",
  "version": "1.0.0",
  "description": "Solução web desenvolvida para facilitar o processo de semestralização dos cursos da Universidade Federal de Mato Grosso do Sul (UFMS), auxiliando estudantes na escolha de disciplinas de forma intuitiva e organizada.",
  "homepage": "https://github.com/hytalo-bassi/PPC#readme",
  "bugs": {
    "url": "https://github.com/hytalo-bassi/PPC/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hytalo-bassi/PPC.git"
  },
  "license": "MIT",
  "type": "commonjs",
  "main": "index.ts",
  "scripts": {
    "dev": "vite",
    "format": "prettier --write src/",
    "lint": "eslint src/",
    "build": "prettier --check src/ && vue-tsc -b && vite build",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,scss}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@tailwindcss/vite": "4.1.17",
    "pinia": "3.0.4",
    "tailwindcss": "4.1.17",
    "vue": "3.5.24"
  },
  "devDependencies": {
    "@eslint/css": "0.14.1",
    "@eslint/js": "9.39.1",
    "@eslint/markdown": "7.5.1",
    "@tsconfig/strictest": "2.0.8",
    "@types/node": "24.10.1",
    "@vitejs/plugin-vue": "6.0.2",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-vue": "10.6.2",
    "globals": "16.5.0",
    "husky": "8.0.0",
    "lint-staged": "16.2.7",
    "prettier": "3.7.3",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.1",
    "vite": "7.2.4",
    "vue-eslint-parser": "10.2.0",
    "vue-tsc": "3.1.5"
  }
}
